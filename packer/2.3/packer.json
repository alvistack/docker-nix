{
    "builders": [
        {
            "type": "docker",
            "image": "ubuntu:20.04",
            "commit": true,
            "changes": [
                "ENV LANG en_US.UTF-8",
                "ENV LC_ALL en_US.UTF-8",
                "ENV SHELL /bin/bash",
                "ENV TZ UTC",
                "ENV ENV /etc/profile",
                "ENV GIT_SSL_CAINFO /etc/ssl/certs/ca-certificates.crt",
                "ENV NIX_PATH /nix/var/nix/profiles/per-user/root/channels",
                "ENV NIX_SSL_CERT_FILE /etc/ssl/certs/ca-certificates.crt",
                "ENV PATH /nix/var/nix/profiles/default/bin:/nix/var/nix/profiles/default/sbin:$PATH",
                "ENV USER root",
                "ENTRYPOINT [\"catatonit\", \"-g\", \"--\", \"docker-entrypoint.sh\"]",
                "CMD [\"nix-build\"]"
            ]
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "set -ex",
                "groupadd -r nixbld",
                "for i in $(seq 0 7); do useradd -r -g nixbld -d /nonexistent -M -s /usr/sbin/nologin nixbld$i; done"
            ]
        },
        {
            "type": "shell",
            "inline": [
                "set -ex",
                "apt-get update",
                "DEBIAN_FRONTEND=noninteractive apt-get install -y language-pack-en locales",
                "localedef -i en_US -c -f UTF-8 en_US.UTF-8",
                "rm -rf /var/lib/apt/lists/*"
            ]
        },
        {
            "type": "shell",
            "inline": [
                "set -ex",
                "apt-get update",
                "DEBIAN_FRONTEND=noninteractive apt-get install -y systemd",
                "ln -fs /lib/systemd/systemd /usr/sbin/init",
                "rm -f /etc/systemd/system/*.wants/*",
                "rm -f /lib/systemd/system/basic.target.wants/*",
                "rm -f /lib/systemd/system/local-fs.target.wants/*",
                "rm -f /lib/systemd/system/multi-user.target.wants/*",
                "rm -f /lib/systemd/system/sockets.target.wants/*initctl*",
                "rm -f /lib/systemd/system/sockets.target.wants/*udev*",
                "rm -f /lib/systemd/system/sysinit.target.wants/systemd-tmpfiles-setup.service",
                "rm -rf /var/lib/apt/lists/*"
            ]
        },
        {
            "type": "ansible",
            "playbook_file": "./packer.yml",
            "inventory_directory": "./",
            "galaxy_file": "./ansible-galaxy-requirements.yml"
        }
    ]
}
